<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseSelection"
    android:fillViewport="true">

    <!-- single child layout of the scrollview -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="@string/pick_course"
            android:textColor="@color/colorPrimaryDark"
            style="@style/TextAppearance.AppCompat.Large"/>

        <!-- buttons for course selection-->
        <!--button clicks from this activity will take to next appropriate activity -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/course_colAlg"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/college_algebra"
            android:textSize="18sp"
            style="?attr/materialButtonOutlinedStyle"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/course_cal1"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/calc_1"
            android:textSize="18sp"
            style="?attr/materialButtonOutlinedStyle"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/course_cal2"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/calc_2"
            android:textSize="18sp"
            style="?attr/materialButtonOutlinedStyle"/>

        <!-- feed the monster -->
        <View
            android:layout_width="match_parent"
            android:layout_height="55dp"/>


    </LinearLayout>

</ScrollView>


